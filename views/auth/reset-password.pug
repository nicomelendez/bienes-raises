extends ../layout/index

block contenido
    .py-10
        h2.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina 

         if errores 
            div(class='max-w-md mx-auto my-10')
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.shadow
                form.space-y-5(method="POST")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    p.text-center Ingrese su nueva contrase単a
                    .px-2
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='email') Contrase単a
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder='Password...' type='password' name='password')
                    .px-2
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='email') Repetir contrase単a
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder='Repetir password...' type='password' name='repetir_password')
                    .w-full.flex.justify-center
                        input(class='w-4/5 bg-indigo-600 hover:bg-indigo-700 cursor-pointer text-white font-bold py-3 px-2' type='submit' value='Cambiar contrase単a')