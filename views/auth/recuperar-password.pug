extends ../layout/index

block contenido
    .py-10
        h2.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina 

         if errores 
            div(class='max-w-md mx-auto my-10')
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.shadow
                form.space-y-5(method="POST" action="/auth/recuperar-password")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    .px-2
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='email') Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder='Email...' type='text' name='email')
                    .flex.items-center.justify-around
                        a.text-gray-500.text-xs(href='/auth/registro') ¿No tienes cuenta? Crea una
                        a.text-gray-500.text-xs(href='/auth/login') ¿Ya tienes cuenta? Inicia sesión
                    .w-full.flex.justify-center
                        input(class='w-4/5 bg-indigo-600 hover:bg-indigo-700 cursor-pointer text-white font-bold py-3 px-2' type='submit' value='Recuperar contraseña')